{
  "name": "faktorio-monorepo",
  "private": true,
  "workspaces": [
    "faktorio-api",
    "faktorio-fe",
    "faktorio-db",
    "faktorio-public-api"
  ],
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "npm-check-updates": "^19.3.1",
    "oxlint": "^1.41.0",
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "dev:fe": "cd faktorio-fe && pnpm dev",
    "dev:api": "cd faktorio-api && pnpm dev",
    "dev": "npm-run-all --parallel dev:*",
    "kill": "kill -9 $(lsof -t -i:9189)",
    "lint": "oxlint",
    "format": "prettier --write .",
    "dbg": "cd faktorio-api && pnpm generate",
    "dbm": "cd faktorio-api && pnpm migrate",
    "bumpDeps:api": "cd faktorio-api && ncu -u",
    "bumpDeps:fe": "cd faktorio-fe && ncu -u",
    "bump": "turbo bump && npm-check-updates -u && pnpm i",
    "typecheck": "turbo tsc",
    "test": "turbo test",
    "test:e2e": "pnpm exec playwright test --max-failures=1"
  },
  "dependencies": {
    "dayjs": "^1.11.19",
    "npm-run-all": "^4.1.5",
    "superjson": "^2.2.6",
    "zod": "^4.3.6"
  }
}
